[user]
	name = Pierre-Nicolas Watin-Augouard
	email = pnwa@icloud.com
	signingkey = /Users/nico/.ssh/id_ed25519.pub
[init]
	defaultBranch = main
[gpg]
	format = ssh
[commit]
	gpgsign = true
[submodule]
	recurse = true

[core]
  pager = delta

[interactive]
    diffFilter = delta --color-only

[delta]
    navigate = true
    side-by-side = true
    dark = true

[merge]
    conflictstyle = diff3

[diff]
    colorMoved = default

[include]
  path = ~/.config/git-delta/catppuccin.config

[delta]
  features = catppuccin-mocha
