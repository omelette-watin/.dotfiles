# colors
theme = catppuccin-mocha
background = #11111b

# fonts
font-family = JetBrainsMono Nerd Font Mono
font-size = 18
window-title-font-family = JetBrainsMono Nerd Font Mono

# appearance
window-padding-x = 10
window-save-state = always

# misc
quit-after-last-window-closed = true
confirm-close-surface = false

# macos specific options
macos-option-as-alt = right
macos-titlebar-style = tabs

# split navigation
keybind = cmd+left=goto_split:left
keybind = cmd+right=goto_split:right
keybind = cmd+down=goto_split:bottom
keybind = cmd+up=goto_split:top

# resize
keybind = cmd+ctrl+left=resize_split:left,40
keybind = cmd+ctrl+right=resize_split:right,40
keybind = cmd+ctrl+down=resize_split:down,40
keybind = cmd+ctrl+up=resize_split:up,40
keybind = cmd+ctrl+e=equalize_splits
keybind = cmd+space=toggle_split_zoom
keybind = ctrl+x=clear_screen
