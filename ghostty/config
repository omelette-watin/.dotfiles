# colors
theme = catppuccin-mocha
background = #11111b

# fonts
font-family = JetBrainsMono Nerd Font Mono
font-size = 16
window-title-font-family = JetBrainsMono Nerd Font Mono

# appearance
window-padding-x = 10
window-save-state = always

# misc
quit-after-last-window-closed = true
confirm-close-surface = false

# macos specific options
macos-option-as-alt = right
macos-titlebar-style = tabs

# split navigation
keybind = cmd+h=goto_split:left
keybind = cmd+l=goto_split:right
keybind = cmd+j=goto_split:bottom
keybind = cmd+k=goto_split:top

# resize
keybind = cmd+ctrl+h=resize_split:left,20
keybind = cmd+ctrl+l=resize_split:right,20
keybind = cmd+ctrl+k=resize_split:up,20
keybind = cmd+ctrl+j=resize_split:down,20
keybind = cmd+ctrl+e=equalize_splits
keybind = cmd+enter=toggle_split_zoom
keybind = ctrl+x=clear_screen
