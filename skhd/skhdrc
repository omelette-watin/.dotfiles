# -- Changing Window Focus --

# change window focus within space
cmd - j : yabai -m window --focus south
cmd - k : yabai -m window --focus north
cmd - h : yabai -m window --focus west
cmd - l : yabai -m window --focus east

# -- Spaces --
#
#change focus between spaces (left and right)
cmd - g: yabai -m space --focus next || yabai -m space --focus first
cmd - s: yabai -m space --focus prev || yabai -m space --focus last

# create and delete spaces
cmd + alt - c: yabai -m space --create
cmd + alt - x: yabai -m space --destroy


# -- Modifying the Layout --

# rotate layout clockwise
cmd + alt - r : yabai -m space --rotate 270

# flip along y-axis
cmd + alt - y : yabai -m space --mirror y-axis

# flip along x-axis
cmd + alt - x : yabai -m space --mirror x-axis

# toggle window float
cmd + alt - t : yabai -m window --toggle float --grid 4:4:1:1:2:2


# -- Modifying Window Size --

# maximize a window
cmd - m : yabai -m window --toggle zoom-fullscreen

# balance out tree of windows (resize to occupy same area)
cmd + alt - e : yabai -m space --balance

# -- Moving Windows Around --

# swap windows
cmd + alt - j : yabai -m window --swap south
cmd + alt - k : yabai -m window --swap north
cmd + alt - h : yabai -m window --swap west
cmd + alt - l : yabai -m window --swap east

# move window and split
cmd + ctrl - j : yabai -m window --warp south
cmd + ctrl - k : yabai -m window --warp north
cmd + ctrl - h : yabai -m window --warp west
cmd + ctrl - l : yabai -m window --warp east

# move window to prev and next space
cmd + alt - g : yabai -m window --space next && yabai -m space --focus next || yabai -m window --space first && yabai -m space --focus first;
cmd + alt - s : yabai -m window --space prev && yabai -m space --focus prev || yabai -m window --space last && yabai -m space --focus last;
